@model IEnumerable<Domain.Tab>

@{
    string artistName = @Model.First().Artist;
    ViewBag.Title = artistName + " - A4tab.net";
}

<h1>@artistName tabs</h1>
<h4>
    @TempData[Web.Infrastructure.Constants.TempDataMessage]
</h4>

<ul data-role="listview" data-inset="true" >
@foreach (var song in Model)
{
    <li>
        @Html.ActionLink(song.Name, "Details", "Songs", new { id=song.Id }, null)
    </li>    
}
</ul>
<p>
    @Html.ActionLink("Browse all Artists", "Index")
</p>
